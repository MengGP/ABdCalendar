<?xml version="1.0" encoding="utf-8"?>
<!--
    Активити - основное > вид календаря
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Блок элементов управления -->
    <include
        android:id="@+id/activity_main_calendar_top"
        layout="@layout/activity_main_calendar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <!-- Блок календаря -->
    <include
        android:id="@+id/activity_main_calendar_bottom"
        layout="@layout/activity_main_calendar_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_main_calendar_top"/>

</RelativeLayout>
<!-- end_layout -->