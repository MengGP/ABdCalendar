    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_main_calendar_top"
        layout="@layout/activity_main_calendar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <include
        android:id="@+id/activity_main_calendar_middle"
        layout="@layout/activity_main_calendar_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_main_calendar_top"/>

